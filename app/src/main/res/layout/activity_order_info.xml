<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_order_info_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/activity_order_info_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/activity_order_info_back"
        />

    <TextView
        android:id="@+id/activity_order_info_served"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Serviti/Pagati"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/activity_order_info_id"
        />

    <ListView
        android:id="@+id/view_list_element"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_order_info_button"
        android:layout_below="@+id/activity_order_info_served"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
    </ListView>


    <Button
        android:id="@+id/activity_order_info_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        />

</RelativeLayout>